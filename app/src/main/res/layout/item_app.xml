<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_all"
    android:layout_marginBottom="0dp"
    android:padding="@dimen/cardview_padding"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardElevation="@dimen/cardview_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/cardview_imageview_width_2"
                android:layout_height="@dimen/cardview_imageview_height_2"
                android:src="@mipmap/default_banner_mobile"
                android:scaleType="fitXY"
                android:id="@+id/thumbnail"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="@dimen/margin_all"
                    android:text="@string/textview_title_item_category"
                    android:textStyle="bold"
                    android:id="@+id/title"/>


                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/button_detail_app"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/detail_btn" />

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
